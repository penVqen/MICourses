@if (IsOpen)
{
    <div class="fixed inset-0 flex items-center justify-center bg-gray-800 bg-opacity-50 z-50">
        <div class="bg-white rounded-lg shadow-lg p-6 w-1/3 relative">
            <button @onclick="Close" class="absolute top-2 right-2 text-gray-500 hover:text-gray-700 text-xl">
                &times;
            </button>

            <h3 class="text-lg font-semibold text-gray-800 text-center">@Title</h3>
            <p class="text-gray-600 mt-4 text-center">@Description</p>
            <div class="mt-6 text-center">
                <p class="text-gray-700">@Content</p>
            </div>

            <div class="flex justify-center mt-6">
                <button @onclick="MarkAsRead"
                        class="bg-purple-500 text-white px-6 py-2 rounded-md hover:bg-purple-600 focus:outline-none focus:ring-2 focus:ring-purple-300">
                    Отметить прочитанным
                </button>
            </div>
        </div>
    </div>
}

@code {
    [Parameter]
    public bool IsOpen { get; set; } = false;

    [Parameter]
    public string Title { get; set; } = "Заголовок";

    [Parameter]
    public string Description { get; set; } = "Описание";

    [Parameter]
    public string Content { get; set; } = "Основной текст";

    [Parameter]
    public EventCallback OnClose { get; set; }

    protected void Close()
    {
        IsOpen = false;
        OnClose.InvokeAsync();
    }

    private void MarkAsRead()
    {
        IsOpen = false;
        OnClose.InvokeAsync();
    }
}
