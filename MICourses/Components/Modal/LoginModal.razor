@using MICourses.Services
@using Microsoft.AspNetCore.Components

@inject ModalService ModalService

@if (Visible)
{
    <div class="fixed inset-0 flex items-center justify-center bg-black bg-opacity-50 z-50">
        <div class="bg-white rounded-lg shadow-lg p-8 w-full max-w-md">
            <img src="/Images/Logo.jpg" alt="Logo" class="mx-auto mb-4 w-20 h-20">
            <h2 class="text-center text-xl font-bold mb-6">Вход в личный кабинет</h2>
            <div class="space-y-4">
                <div>
                    <label for="login" class="block text-sm font-medium text-gray-700">Логин / Email</label>
                    <input type="text" id="login" class="mt-1 block w-full p-2 border border-gray-300 rounded-md focus:outline-none focus:ring focus:ring-purple-200">
                </div>
                <div>
                    <label for="password" class="block text-sm font-medium text-gray-700">Пароль</label>
                    <input type="password" id="password" class="mt-1 block w-full p-2 border border-gray-300 rounded-md focus:outline-none focus:ring focus:ring-purple-200">
                </div>
            </div>
            <button class="w-full bg-purple-500 text-white font-bold py-2 px-4 rounded-md mt-6 hover:bg-purple-600">Войти</button>
            <p class="text-center mt-4 text-sm text-gray-600">
                Еще нет аккаунта? <a href="/Register" class="text-purple-400 font-bold">Зарегистрироваться</a>
            </p>
            <button class="absolute top-4 right-4 text-gray-500 hover:text-gray-700" @onclick="OnCloseButtonClick">
                ✕
            </button>
        </div>
    </div>
}

@code {
    [Parameter] public bool Visible { get; set; }
    [Parameter] public EventCallback<bool> OnClose { get; set; }

    private void OnCloseButtonClick()
    {
        Visible = false;
        OnClose.InvokeAsync(false);
    }
}
